@page
@using Fitness_Challenge_App.Models
@model Fitness_Challenge_App.Pages.PeopleModel
@{
	<h1>hello world welcome my site</h1>
	<form method="post">

		<input type="number" name="id" />
		<input type="text" name="name" />
		<input type="number" name="age" />

		<button type="submit">add</button>
	</form>




	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Age</th>

			</tr>
		</thead>
		<tbody>
		@foreach(Person person in Model.People)
			{
				<tr>

					<td>
						@person.Id

					</td>
					<td>
						@person.Name

					</td>
					<td>
						@person.Age

					</td>
				</tr>
			}
		</tbody>
	</table>
}
